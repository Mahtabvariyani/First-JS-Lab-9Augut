  "city block, or styles of clothing. It is a coherent set of signs that transmits some kind of ";

function count(num1, num2, num3) {

  if (num1.length > num2.length || num1.length > num3.length) {
    return num1.length;
  } else if (num2.length > num3.length || num2.length > num1.length) {
    return num2.length;
  } else {
    return num3.length;
  }
  
  
}
console.log(count(text, text2, text3));

